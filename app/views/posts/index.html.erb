<div class="flex flex-col items-center justify-center">
    <div class="flex items-center justify-between gap-4 h-64 bg-red-200 w-full">
        <div class="px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-medium text-black">Stats 1</h2>
        </div>
        <div class="px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-medium text-black">Stats 2</h2>
        </div>
        <div class="px-4 sm:px-6 lg:px-8">
            <h2 class="text-3xl font-medium text-black">Stats 3</h2>
        </div>
    </div>
    <div class="px-4 sm:px-6 lg:px-8 mt-8 w-full">
        <div class="sm:flex sm:items-center">
            <div class="sm:flex-auto">
                <h1 class="text-base font-semibold leading-6 text-black">List of your job offers</h1>
                <p class="mt-2 text-sm text-black">Bellow you can find all the job offers in your account with full description.</p>
            </div>
            <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
                <%#= link_to "add post", new_posts_path,class:"block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
            </div>
        </div>
        <div class="mt-8 flow-root">
            <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
                    <table class="min-w-full divide-y divide-gray-300">
                        <thead>
                            <tr class="bg-gray-800">
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white">Title</th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white">Stack</th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white">Company</th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white">Location</th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white">Contract</th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white">Published</th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-white">Status</th>
                            </tr>
                        </thead>
                        <thead>
                          <% @posts.each do |post| %>
                            <tr>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"><%= post.title %></th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-medium text-gray-500">
                                  <% post.stacks.each do |stack| %>
                                    <div class="flex gap-1">
                                      <i class=" text-xl devicon-<%= stack.name %>-plain colored"></i>
                                      <%= stack.name %>
                                    </div>
                                  <% end %>
                                </th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-medium text-gray-500"><%= post.company.name %></th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-medium text-gray-500"><%= post.location %></th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-medium text-gray-500"><%= post.contract_type %></th>
                                <th scope="col" class="px-3 py-3.5 text-left text-sm font-medium text-gray-500"><%= post.published_on.strftime("%Y-%m-%d") %></th>
                                <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500">
                                    <span class="inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20"><%= post.status %></span></td>
                            </tr>
                          <% end %>
                        </thead>
                        <%# <tbody class="divide-y divide-gray-200 bg-white">
                            <tr>
                                <td class="whitespace-nowrap py-5 pl-4 pr-3 text-sm sm:pl-0">
                                    <div class="flex items-center">

                                        <div class="ml-4">
                                            <div class="font-medium text-gray-900">Lindsay Walton</div>
                                            <div class="mt-1 text-gray-500">lindsay.walton@example.com</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500">
                                    <div class="text-gray-900">Front-end Developer</div>
                                    <div class="mt-1 text-gray-500">Optimization</div>
                                </td>
                                <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500">
                                    <span class="inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-600/20">Active</span>
                                </td>
                                <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500">Member</td>
                            </tr>
                            <!-- More people... -->
                        </tbody> %>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
