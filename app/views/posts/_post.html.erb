
<tr id="<%= post.id %>" class="hover:bg-gray-100">
  <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
    <lottie-player class="spinner-<%= post.id %> hidden" src="<%= image_path("lottie/spinner.json")%>" background="transparent" speed="1" style="width: 58.3px; height: 58.3px" direction="1" playMode="normal" loop autoplay></lottie-player>
    <div data-controller="modal">
      <button data-action="modal#open" class="btn-outline"><%= post.title %></button>
      <dialog data-modal-target="modal" class="max-w-screen-md rounded-3xl bg-gray-100">
        <%= render "posts/show", post: post %>
      </dialog>
    </div>
  </th>

  <th scope="col" class="px-3 py-3.5 text-left text-sm font-medium text-gray-500">
      <lottie-player class="spinner-<%= post.id %> hidden" src="<%= image_path("lottie/spinner.json")%>" background="transparent" speed="1" style="width: 58.3px; height: 58.3px" direction="1" playMode="normal" loop autoplay></lottie-player>
    <div class="flex gap-1">
      <% post.stacks.each do |stack| %>
        <i class="text-3xl devicon-<%= stack.name %>-plain colored"></i>
        <%#= stack.name %>
    <% end %>
    </div>
  </th>
  <th scope="col" class="px-3 py-3.5 text-left text-sm font-medium text-gray-500"><%= post.company&.name %>
    <lottie-player class="spinner-<%= post.id %> hidden" src="<%= image_path("lottie/spinner.json")%>" background="transparent" speed="1" style="width: 58.3px; height: 58.3px" direction="1" playMode="normal" loop autoplay></lottie-player>
  </th>

  <th scope="col" class="px-3 py-3.5 text-left text-sm font-medium text-gray-500"><%= post.location %>
    <lottie-player class="spinner-<%= post.id %> hidden" src="<%= image_path("lottie/spinner.json")%>" background="transparent" speed="1" style="width: 58.3px; height: 58.3px" direction="1" playMode="normal" loop autoplay></lottie-player>
  </th>

  <th scope="col" class="px-3 py-3.5 text-left text-sm font-medium text-gray-500"><%= post.contract_type %>
    <lottie-player class="spinner-<%= post.id %> hidden" src="<%= image_path("lottie/spinner.json")%>" background="transparent" speed="1" style="width: 58.3px; height: 58.3px" direction="1" playMode="normal" loop autoplay></lottie-player>
  </th>

  <th scope="col" class="px-3 py-3.5 text-left text-sm font-medium text-gray-500"><%= post.updated_at.strftime("%Y-%m-%d") %>
    <lottie-player class="spinner-<%= post.id %> hidden" src="<%= image_path("lottie/spinner.json")%>" background="transparent" speed="1" style="width: 58.3px; height: 58.3px" direction="1" playMode="normal" loop autoplay></lottie-player>
  </th>

  <td class="whitespace-nowrap px-3 py-1 text-sm text-500">
    <lottie-player class="spinner-<%= post.id %> hidden" src="<%= image_path("lottie/spinner.json")%>" background="transparent" speed="1" style="width: 58.3px; height: 58.3px" direction="1" playMode="normal" loop autoplay></lottie-player>
    <span class="spinner-<%= post.id %>  inline-flex items-center rounded-md px-2 py-1 text-xs font-medium text-white" style="background-color: <%=post.color%>"><%= post.status %></span>
  </td>
  <td>
  <%= button_to post_path(post), method: :delete, data: { turbo_method: :delete }, class: "delete-button" do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="text-gray-500 w-6 h-6">
  <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
</svg></i>
  <% end %>
</td>
</tr>
