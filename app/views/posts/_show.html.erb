<div class="mx-auto mt-8 rounded overflow-x-hidden m-6 ">
  <div class= "mx-10 shadow-lg">

    <button type="button" data-action="modal#close" class="absolute top-2 right-2 text-gray-500 hover:text-gray-800">
      <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <img src="<%= asset_path('clip.png') %>" alt="Clip Paper" class="absolute top-1 left-1/2 transform -translate-x-1/2" style="width: 90px; height: auto; display: block; margin-left: auto; margin-right: auto;" >

    <div class="w-full p-8 bg-white rounded-md ">

      <div data-controller="comment" data-comment-post-id-value="<%= post.id %>">
        <div style="text-align: right;">

          <a href= "<%= post.url %>" target="_blank" class="inline-flex items-center bg-gray-900 text-white rounded-md px-3 py-2 text-sm font-medium mb-4 transition duration-300 ease-in-out hover:bg-gray-800 hover:text-gray-200 hover:bg-opacity-80">
            Candidater <svg class="h-6 w-6 text-zinc-100 ml-2 mb-1"  width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">  <path stroke="none" d="M0 0h24v24H0z"/>  <path d="M11 7h-5a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-5" />  <line x1="10" y1="14" x2="20" y2="4" />  <polyline points="15 4 20 4 20 9" /></svg>
          </a>

        </div>

        <h1 class="text-2xl font-bold mb-2 text-center"><%= post.title%></h1>

        <div class="text-right">
          <button data-action="click->comment#displayForm" data-comment-target="button" class="inline-flex items-center bg-gray-100 text-gray-800 rounded-md px-3 py-2 text-sm font-medium mb-4 transition duration-300 ease-in-out hover:bg-gray-400 hover:text-gray-900 text-gray-800 hover:bg-opacity-80 border border-neutral-800">
          Commenter
          </button>
        </div>
        <div data-comment-target="insert" class="break-words">
          <%= render "posts/comment", post: post %>
        </div>
        <div data-comment-target="form" class="hidden">
        <% if form %>
          <%= render "posts/formComment", post: post %>
        <% end %>
        </div>
          <hr class="my-2 border-t-2 border-gray-300">
      </div>

      <p class="text-gray-600 mb-2"><i>Publié le: <strong><%= post.published_on%></i></strong></p>
      <p class="text-gray-600 mb-2"><i>Années d'expérience : <strong><%= post.experience_years%></i></strong></p>

      <div class="mb-4 whitespace-normal">

        <div class="flex items-center mb-1 p-2"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 mr-2">
          <path fill-rule="evenodd" d="M7.5 5.25a3 3 0 0 1 3-3h3a3 3 0 0 1 3 3v.205c.933.085 1.857.197 2.774.334 1.454.218 2.476 1.483 2.476 2.917v3.033c0 1.211-.734 2.352-1.936 2.752A24.726 24.726 0 0 1 12 15.75c-2.73 0-5.357-.442-7.814-1.259-1.202-.4-1.936-1.541-1.936-2.752V8.706c0-1.434 1.022-2.7 2.476-2.917A48.814 48.814 0 0 1 7.5 5.455V5.25Zm7.5 0v.09a49.488 49.488 0 0 0-6 0v-.09a1.5 1.5 0 0 1 1.5-1.5h3a1.5 1.5 0 0 1 1.5 1.5Zm-3 8.25a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Z" clip-rule="evenodd" />
          <path d="M3 18.4v-2.796a4.3 4.3 0 0 0 .713.31A26.226 26.226 0 0 0 12 17.25c2.892 0 5.68-.468 8.287-1.335.252-.084.49-.189.713-.311V18.4c0 1.452-1.047 2.728-2.523 2.923-2.12.282-4.282.427-6.477.427a49.19 49.19 0 0 1-6.477-.427C4.047 21.128 3 19.852 3 18.4Z" />
          </svg>
          <%= post.company&.name%>
        </div>

        <div class="flex items-center mb-1 p-2"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 mr-1">
          <path fill-rule="evenodd" d="M3 6a3 3 0 0 1 3-3h12a3 3 0 0 1 3 3v12a3 3 0 0 1-3 3H6a3 3 0 0 1-3-3V6Zm14.25 6a.75.75 0 0 1-.22.53l-2.25 2.25a.75.75 0 1 1-1.06-1.06L15.44 12l-1.72-1.72a.75.75 0 1 1 1.06-1.06l2.25 2.25c.141.14.22.331.22.53Zm-10.28-.53a.75.75 0 0 0 0 1.06l2.25 2.25a.75.75 0 1 0 1.06-1.06L8.56 12l1.72-1.72a.75.75 0 1 0-1.06-1.06l-2.25 2.25Z" clip-rule="evenodd" />
          </svg>
          &nbsp;
          <% post.stacks.each do |stack| %>
            <div class="flex gap-1">
              <i class=" text-xl devicon-<%= stack.name%>-plain colored"></i>
              <%= stack.name.capitalize %>
              &nbsp;
              &nbsp;
            </div>
          <% end %>
        </div>

        <div class="flex items-center mb-1 p-2"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 mr-2">
          <path fill-rule="evenodd" d="m11.54 22.351.07.04.028.016a.76.76 0 0 0 .723 0l.028-.015.071-.041a16.975 16.975 0 0 0 1.144-.742 19.58 19.58 0 0 0 2.683-2.282c1.944-1.99 3.963-4.98 3.963-8.827a8.25 8.25 0 0 0-16.5 0c0 3.846 2.02 6.837 3.963 8.827a19.58 19.58 0 0 0 2.682 2.282 16.975 16.975 0 0 0 1.145.742ZM12 13.5a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" clip-rule="evenodd" />
          </svg>
          <%= post.location%>
        </div>

        <div class="flex items-center mb-1 p-2"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 mr-2">
          <path fill-rule="evenodd" d="M17.663 3.118c.225.015.45.032.673.05C19.876 3.298 21 4.604 21 6.109v9.642a3 3 0 0 1-3 3V16.5c0-5.922-4.576-10.775-10.384-11.217.324-1.132 1.3-2.01 2.548-2.114.224-.019.448-.036.673-.051A3 3 0 0 1 13.5 1.5H15a3 3 0 0 1 2.663 1.618ZM12 4.5A1.5 1.5 0 0 1 13.5 3H15a1.5 1.5 0 0 1 1.5 1.5H12Z" clip-rule="evenodd" />
          <path d="M3 8.625c0-1.036.84-1.875 1.875-1.875h.375A3.75 3.75 0 0 1 9 10.5v1.875c0 1.036.84 1.875 1.875 1.875h1.875A3.75 3.75 0 0 1 16.5 18v2.625c0 1.035-.84 1.875-1.875 1.875h-9.75A1.875 1.875 0 0 1 3 20.625v-12Z" />
          <path d="M10.5 10.5a5.23 5.23 0 0 0-1.279-3.434 9.768 9.768 0 0 1 6.963 6.963 5.23 5.23 0 0 0-3.434-1.279h-1.875a.375.375 0 0 1-.375-.375V10.5Z" />
          </svg>
          <%= post.contract_type%>
        </div>

        <div class="flex items-center mb-1 p-2"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"  class="w-6 h-6 mr-2">
          <path fill-rule="evenodd" d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12Zm8.706-1.442c1.146-.573 2.437.463 2.126 1.706l-.709 2.836.042-.02a.75.75 0 0 1 .67 1.34l-.04.022c-1.147.573-2.438-.463-2.127-1.706l.71-2.836-.042.02a.75.75 0 1 1-.671-1.34l.041-.022ZM12 9a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Z" clip-rule="evenodd" />
          </svg>
          <%= post.description %>
        </div>

      </div>
    </div>
  </div>
</div>
